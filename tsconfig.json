{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [ "ES5", "ES2015.Promise", "DOM" ],
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "skipLibCheck": true,
        "jsx": "react",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "traceResolution": false,
        "allowJs": true
    },
    "files": [
        "./frontend/**/*.ts",
        "./frontend/**/*.tsx",
        "!./node_modules/**/*.ts",
        "!./node_modules/**/*.tsx"
    ]
}
